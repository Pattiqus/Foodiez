{{#if mydata.length}}
  {{#each mydata as |singleData|}}
    <div class="four wide column">

      <div class="ui card">
        <div class="content">
          <div class="right floated meta"></div>
          <img class="ui avatar image" src="https://media.istockphoto.com/photos/be-genuine-be-remarkable-be-worth-connecting-with-picture-id1312133528?s=612x612" />
          User Id-{{singleData.user_id}}
        </div>

        <div class="ui slide masked reveal image">

          <img src={{singleData.images.0.image_link}} class="visible content" />
          <img src={{singleData.images.1.image_link}} class="hidden content" />

        </div>
        <div class="content">
          <a class="header">{{singleData.recipe_name}}</a>
          <span class="right floated">
            <i class="heart outline like icon"></i>
            17 likes
          </span>
          <i class="comment icon"></i>
          3 comments
        </div>
        <div class="content">
          <span class="viewbutton">

            <button
              type="button"
              id="view-{{singleData.id}}"
              class="ui primary button"
              data-toggle="modal"
              data-target="#project-modal"
            >view</button>
          </span>

          {{{check_userid singleData.user_id singleData.id}}}
        </div>

        <div class="extra content">
          <div class="ui large transparent left icon input">
            <i class="heart outline icon"></i>
            <input type="text" placeholder="Add Comment..." />
          </div>
        </div>
      </div>

    </div>
  {{/each}}

{{else}}<p>No record found</p>
{{/if}}

<!-- Modal -->
<div
  class="modal fade custom-modal"
  id="project-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="project-modal-form"
  aria-hidden="true"
>

  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="project-modal-form">View Detail.</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="project-form">
        <div class="modal-body">

          <div class="ui items">
            <div class="item">
              <div class="image">
                <img id="singleImage" />
              </div>
              <div class="content">

                {{! recipe Name }}
                <a class="header" id="rName"></a>
                <div class="meta">

                  {{! ingredients}}
                  <span>Ingredients</span>

                  <div id="ingredientslist" class="ui list">

                  </div>

                </div>
                <div class="description">
                  <p></p>
                </div>
                <div class="extra">
                  Steps
                </div>
                <div id="stepslist" class="ui ordered list">

                </div>
              </div>
            </div>

          </div>

        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >Close</button>
          {{! <button type="submit" class="btn custom-btn">Submit Project Info</button> }}
        </div>
      </form>
    </div>
  </div>
</div>
<script src="./js/profile.js"></script>